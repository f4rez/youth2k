<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="youth.livetsord.se.countergame.MainActivity"
    >
    <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
        android:id="@+id/team1">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TEAM Norrland"
        android:id="@+id/team1_name"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_arrow_upward_black_48dp"
        android:id="@+id/team1_upvote"
        android:layout_toRightOf="@+id/team1_name"
        android:tag="team1 1"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_arrow_downward_black_48dp"
        android:id="@+id/team1_downvote"
        android:layout_toRightOf="@+id/team1_upvote"
        android:tag="team1 -1"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/team1_count"
        android:layout_toRightOf="@id/team1_downvote"
        android:text="0"
        android:textSize="24sp"/>
</RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_below="@+id/team1"
        android:id="@+id/team2">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TEAM Svealand"
            android:id="@+id/team2_name"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_arrow_upward_black_48dp"
            android:id="@+id/team2_upvote"
            android:layout_toRightOf="@+id/team2_name"
            android:tag="team2 1"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_arrow_downward_black_48dp"
            android:id="@+id/team2_downvote"
            android:layout_toRightOf="@+id/team2_upvote"
            android:tag="team2 -1"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/team2_count"
            android:layout_toRightOf="@id/team2_downvote"
            android:text="0"
            android:textSize="24sp"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_below="@+id/team2"
        android:id="@+id/team3">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TEAM Svealand"
            android:id="@+id/team3_name"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_arrow_upward_black_48dp"
            android:id="@+id/team3_upvote"
            android:layout_toRightOf="@+id/team3_name"
            android:tag="team3 1"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_arrow_downward_black_48dp"
            android:id="@+id/team3_downvote"
            android:layout_toRightOf="@+id/team3_upvote"
            android:tag="team3 -1"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/team3_count"
            android:layout_toRightOf="@id/team3_downvote"
            android:text="0"
            android:textSize="24sp"/>
    </RelativeLayout>
</RelativeLayout>
